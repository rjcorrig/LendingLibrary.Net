@using Microsoft.AspNet.Identity
@model LendingLibrary.Models.BookIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Bookshelf for @Html.DisplayFor(model => model.User.GivenName) @Html.DisplayFor(model => model.User.FamilyName)</h2>

@Html.Partial("_IndexTable", Model.Books)

@if (Model.User.Id == User.Identity.GetUserId())
{
    <p>
        <a class="btn btn-success" href="@Url.Action("Create")">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Create New
        </a>
    </p>
}

@section Scripts {
    @Scripts.Render("~/Scripts/bootstrap-rating/bootstrap-rating.js")
}